---
const {url, data} = Astro.props
---
<div class="md:w-1/3 lg:w-1/4 w-1/2 p-4">
    <a href={url}>
        <div class="aspect-square ">
            <img src= {data.hero.url} alt={data.hero.alt} class="w-full h-full object-cover">
        </div>
        <div>
            <h2 class="text-xl font-bold">{data.title}</h2>
            <div><small>{data.pubDate.slice(0,10)}</small></div>
        </div>
    </a>
</div>