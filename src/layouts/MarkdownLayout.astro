---
import MasterLayout from "./MasterLayout.astro"
const {frontmatter} = Astro.props
---
<MasterLayout>
    <main>
        <h2>{frontmatter.title}</h2>
        <div>發布日期 {frontmatter.pubDate}</div>
        <div>作者 {frontmatter.author}</div>
        <slot></slot>
    </main>
</MasterLayout>
<style>
    main {
        width: 800px;
        margin: auto;
        h2 {
            padding-bottom: 10px;
            border-bottom: 1px solid #000;
        }
    }
</style>